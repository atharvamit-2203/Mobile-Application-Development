<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1F32">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Room for Extra Lecture"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lecture Title"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="4dp"/>
        
        <EditText
            android:id="@+id/etTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., Advanced Java Concepts"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888"
            android:background="#2A2F42"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room Type"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="4dp"/>
        
        <Spinner
            android:id="@+id/spinnerRoomType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2A2F42"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room Number"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="4dp"/>
        
        <EditText
            android:id="@+id/etRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., A301, Lab-2"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888"
            android:background="#2A2F42"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="4dp"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Select Date"
                android:textColor="#888888"
                android:background="#2A2F42"
                android:padding="12dp"
                android:layout_marginEnd="8dp"/>
            
            <Button
                android:id="@+id/btnSelectDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“…"
                android:textSize="20sp"/>
        </LinearLayout>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Time"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="4dp"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            
            <TextView
                android:id="@+id/tvStartTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Select Start Time"
                android:textColor="#888888"
                android:background="#2A2F42"
                android:padding="12dp"
                android:layout_marginEnd="8dp"/>
            
            <Button
                android:id="@+id/btnSelectStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ•"
                android:textSize="20sp"/>
        </LinearLayout>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Time"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="4dp"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            
            <TextView
                android:id="@+id/tvEndTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Select End Time"
                android:textColor="#888888"
                android:background="#2A2F42"
                android:padding="12dp"
                android:layout_marginEnd="8dp"/>
            
            <Button
                android:id="@+id/btnSelectEndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ•"
                android:textSize="20sp"/>
        </LinearLayout>
        
        <Button
            android:id="@+id/btnCheckAvailability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Room Availability"
            android:backgroundTint="#F59E0B"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"/>
        
        <TextView
            android:id="@+id/tvConflicts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FFFFFF"
            android:background="#2A2F42"
            android:padding="12dp"
            android:minHeight="60dp"
            android:layout_marginBottom="16dp"/>
        
        <Button
            android:id="@+id/btnBookRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Booking"
            android:backgroundTint="#10B981"
            android:textColor="#FFFFFF"
            android:enabled="false"/>
        
    </LinearLayout>
</ScrollView>
