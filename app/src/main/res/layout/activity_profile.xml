<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F172A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with Gradient Background -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#1E40AF"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <!-- Profile Avatar Circle -->
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="8dp"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/tvInitial"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#3B82F6"
                        android:gravity="center"
                        android:text="U"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp"
                        android:textStyle="bold"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Profile"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Profile Information Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#1E293B"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Personal Information"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"/>

                    <!-- Name Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp"
                        android:background="#334155"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ‘¤ Name"
                            android:textColor="#94A3B8"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="John Doe"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <!-- Email Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp"
                        android:background="#334155"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ“§ Email"
                            android:textColor="#94A3B8"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="john@mpstme.edu.in"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <!-- Role Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp"
                        android:background="#334155"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸŽ“ Role"
                            android:textColor="#94A3B8"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tvRole"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="STUDENT"
                            android:textColor="#10B981"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <!-- SAP ID Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#334155"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ†” SAP ID"
                            android:textColor="#94A3B8"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tvSapId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="70123456789"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Action Buttons -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#1E293B"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <Button
                        android:id="@+id/btnEditProfile"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="âœï¸ Edit Profile"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:backgroundTint="#3B82F6"
                        android:layout_marginBottom="12dp"/>

                    <Button
                        android:id="@+id/btnChangePassword"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="ðŸ”’ Change Password"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:backgroundTint="#6366F1"
                        android:layout_marginBottom="12dp"/>

                    <Button
                        android:id="@+id/btnOrderHistory"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="ðŸ“œ My Orders"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:backgroundTint="#F59E0B"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Student QR Code Section -->
            <LinearLayout
                android:id="@+id/qrLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#1E293B"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“± Student ID QR Code"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Show this QR code for attendance and verification"
                            android:textColor="#94A3B8"
                            android:textSize="14sp"
                            android:layout_marginBottom="16dp"/>

                        <Button
                            android:id="@+id/btnViewQR"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:text="ðŸ”² Show My QR Code"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:backgroundTint="#10B981"
                            android:layout_marginBottom="16dp"/>

                        <!-- QR Code Display -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#FFFFFF"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="24dp"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/ivStudentQR"
                                    android:layout_width="280dp"
                                    android:layout_height="280dp"
                                    android:scaleType="fitCenter"
                                    android:visibility="gone"
                                    android:layout_marginBottom="12dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="âš ï¸ Keep this QR code private"
                                    android:textColor="#EF4444"
                                    android:textSize="12sp"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
