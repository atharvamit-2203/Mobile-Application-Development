<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#2A3F5F"
    android:padding="12dp">

    <TextView
        android:id="@+id/clubNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Club Name"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/clubDescText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="14sp"
        android:textColor="#B0B0B0"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/clubCategoryText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Category"
            android:textSize="12sp"
            android:textColor="#FFA500"/>

        <TextView
            android:id="@+id/clubMembersText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 members"
            android:textSize="12sp"
            android:textColor="#B0B0B0"
            android:layout_marginRight="12dp"/>

        <Button
            android:id="@+id/joinClubButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Join Club"
            android:textSize="12sp"
            android:backgroundTint="#3B82F6"/>
    </LinearLayout>
</LinearLayout>
