<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F2937">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“± Order Scanner"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scan customer QR codes to verify orders"
            android:textSize="14sp"
            android:textColor="#9CA3AF"
            android:gravity="center"
            android:layout_marginBottom="30dp"/>

        <!-- Scan Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#374151"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <Button
                android:id="@+id/btnScanQR"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="ðŸ“· SCAN QR CODE"
                android:textSize="20sp"
                android:textStyle="bold"
                android:backgroundTint="#3B82F6"
                android:textColor="#FFFFFF"/>
        </androidx.cardview.widget.CardView>

        <!-- Status Text -->
        <TextView
            android:id="@+id/tvScanStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scan a QR code to verify order"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:padding="15dp"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="20dp"/>

        <!-- Order Details Section -->
        <LinearLayout
            android:id="@+id/orderDetailsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#374151"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“‹ Order Details"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="15dp"/>

                    <TextView
                        android:id="@+id/tvOrderDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#E5E7EB"
                        android:lineSpacingExtra="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnVerifyOrder"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="âœ… VERIFY"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="#10B981"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="10dp"/>

                <Button
                    android:id="@+id/btnRejectOrder"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="âŒ REJECT"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="#EF4444"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Instructions -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="#374151"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â„¹ï¸ Instructions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Ask customer to show their order QR code\n2. Tap 'SCAN QR CODE' button\n3. Point camera at the QR code\n4. Review order details\n5. Tap 'VERIFY' to confirm order\n6. Prepare the items for customer"
                    android:textSize="14sp"
                    android:textColor="#D1D5DB"
                    android:lineSpacingExtra="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
