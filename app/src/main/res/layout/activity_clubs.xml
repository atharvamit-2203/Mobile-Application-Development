<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0F172A">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Clubs"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:background="#1E293B"/>

    <!-- TabHost -->
    <TabHost
        android:id="@+id/clubsTabHost"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1E293B"/>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Campus Clubs Tab -->
                <LinearLayout
                    android:id="@+id/campusClubsTab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Browse and join campus clubs"
                        android:textSize="14sp"
                        android:textColor="#94A3B8"
                        android:padding="12dp"/>

                    <ListView
                        android:id="@+id/campusClubsListView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="#1E293B"
                        android:dividerHeight="8dp"/>
                </LinearLayout>

                <!-- My Clubs Tab -->
                <LinearLayout
                    android:id="@+id/myClubsTab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your joined clubs"
                        android:textSize="14sp"
                        android:textColor="#94A3B8"
                        android:padding="12dp"/>

                    <ListView
                        android:id="@+id/myClubsListView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="#1E293B"
                        android:dividerHeight="8dp"/>
                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>
</LinearLayout>
